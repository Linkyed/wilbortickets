// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Cartao_Credito {
  id         Int     @id @default(autoincrement())
  num_cartao String  @unique
  dono_cartao String 
  data_vencimento String
  cvv        String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clientes Cliente[]
}
model Usuario {
  id         Int   @id@default(autoincrement())
 nome String
 email String @unique
 senha String
 cliente Cliente?
}

model Endereco {
  id          Int   @id@default(autoincrement())
  rua         String
  numero      Int
  bairro      String 
  cidade      String
  estado      String
  cep         String
  complemento String?
  clientes Cliente[]
}
model Setor {
  id Int @id @default(autoincrement())
  nome String 
}

model Perfil {
  id Int @id @default(autoincrement())
  nome String 
}

model Cliente{
  id Int @id @default(autoincrement())
  cpf String @unique
  data_nasc DateTime
  usuario Usuario @relation(fields: [id_usuario], references: [id])
  id_usuario Int @unique
  cartao Cartao_Credito @relation(fields: [id_cartao], references: [id])
  id_cartao Int @unique
  endereco Endereco @relation(fields: [id_endereco], references: [id])
  id_endereco Int @unique
  telefone String
  
}  

model Promoter{ 
  id Int @id @default(autoincrement()) 
  usuario Usuario @relation(fields: [id_usuario], references: [id])
  id_usuario Int @unique
  cpf String? @unique 
  cnpj String? @unique 
  status String 
  data_nasc DateTime 
  telefone String 
  endereco Endereco @relation(fields: [id_endereco], references: [id])
  id_endereco Int @unique
  eventos Evento[]
}

model Evento {
  id          Int       @id @default(autoincrement())
  data        DateTime 
  descricao   String
  nome        String
  endereco    Endereco  @relation(fields: [id_endereco], references: [id])
  id_endereco Int     
  promoter    Promoter  @relation(fields: [id_promoter], references: [id])
  id_promoter Int      
  banner      String
  lotacao     Lotacao[]
}

model Lotacao {
  id  Int     @id @default(autoincrement())
  valorTotal  Float
  quantidade  Int 

  perfil Perfil @relation(fields: [id_perfil], references: [id])
  id_perfil Int @unique
  
  setor Setor @relation(fields: [id_setor], references: [id])
  id_setor Int @unique

  evento Evento @relation(fields: [id_evento], references: [id])
  id_evento Int @unique

  ingressos Ingresso[]
}

model Ingresso {
  id Int @id @default(autoincrement()) 
  valor_pago Float
  lotacao Lotacao @relation(fields: [id_lotacao], references: [id])
  id_lotacao Int @unique
  compra     Compra    @relation(fields: [id_compra], references: [id])
  id_compra  Int
}

model Compra {
  id              Int         @id @default(autoincrement())
  id_cliente      Int
  cliente         Cliente     @relation(fields: [id_cliente], references: [id])
  ingressos       Ingresso[] 
  data_hora       DateTime    @default(now())
  numero_cartao   String

  @@index([id_cliente])

}

