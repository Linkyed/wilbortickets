generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Cartao_Credito {
  id         Int     @id @default(autoincrement())
  num_cartao String  @unique
  dono_cartao String 
  data_vencimento String
  cvv        String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clientes Cliente[]
}
model Usuario {
  id         Int   @id@default(autoincrement())
  nome String
  email String @unique
  senha String

  adm Administrador?
  cliente Cliente?
}

model Administrador {
  id Int @id @default(autoincrement())
  cpf String @unique
  super_adm Boolean

  id_usuario Int @unique
  usuario Usuario @relation(fields: [id_usuario], references: [id])
  @@index([id_usuario])
}

model Endereco {
  id          Int   @id@default(autoincrement())
  rua         String
  numero      Int
  bairro      String 
  cidade      String
  estado      String
  cep         String
  complemento String?
  clientes Cliente[]
}
model Setor {
  id Int @id @default(autoincrement())
  nome String 
}

model Perfil {
  id Int @id @default(autoincrement())
  nome String 
}

model Cliente{
  id Int @id @default(autoincrement())
  cpf String @unique
  data_nasc DateTime
  usuario Usuario @relation(fields: [id_usuario], references: [id])
  id_usuario Int @unique
  cartao Cartao_Credito @relation(fields: [id_cartao], references: [id])
  id_cartao Int @unique
  endereco Endereco @relation(fields: [id_endereco], references: [id])
  id_endereco Int @unique
  telefone String
  
}