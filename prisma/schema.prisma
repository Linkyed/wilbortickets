generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Cartao_Credito {
  id         Int     @id @default(autoincrement())
  num_cartao String  @unique
  dono_cartao String 
  data_vencimento String
  cvv        String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Usuario {
  id         Int   @id@default(autoincrement())
 nome String
 email String @unique
 senha String
}

model Evento {
  id          Int      @id @default(autoincrement())
  data        DateTime 
  descricao   String
  nome        String
  endereco    String 
  id_promoter Int
  banner      String
}